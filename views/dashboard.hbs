                <div class="card-body">
                    

                    <!-- Κύριες μετρικές -->
                    <div class="row mb-4 align-items-stretch">

                        <div class="col-md-6 col-lg-4 mb-3">
                            <a class="card bg-primary text-white h-100 dashboard-card" href="/canteens/canteens">
                                <div class="card-body px-4">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h2 class="mb-0 display-4 text-white fw-semibold">{{activeCanteens}}</h2>
                                            <p class="mb-0">Ενεργά Κυλικεία</p>
                                        </div>
                                        <div class="display-6">
                                            <i class="ti-shopping-cart"></i>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-6 col-lg-4 mb-3">
                            <a class="card bg-success text-white h-100 dashboard-card" href="/properties/properties">
                                <div class="card-body px-4">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h2 class="mb-0 text-white display-4 fw-semibold">{{activeProperties.sum}}</h2>
                                            <p class="mb-0 text-white">Ενεργά Ακίνητα</p>
