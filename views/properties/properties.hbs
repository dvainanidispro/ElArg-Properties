<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-home me-2"></i>
                        Ακίνητα
                    </h1>
                    <div class="card-actions my-3">
                        <div class="d-flex gap-2">
                            <a href="/properties/properties" class="btn btn-success ">
                                {{!-- <i class="ti-plus me-1"></i> --}}
                                <span>Όλα</span>
                            </a>
                            <a href="/properties/properties?asset_type=leased_out" class="btn bg-purple">
                                {{!-- <i class="ti-plus me-1"></i> --}}
                                <span>Εκμισθωμένα</span>
                            </a>
                            <a href="/properties/properties?asset_type=rented" class="btn bg-pink">
                                {{!-- <i class="ti-plus me-1"></i> --}}
                                <span>Μισθωμένα</span>
                            </a>
                            <a href="/properties/properties?is_part_of_other=false" class="btn btn-secondary">
                                {{!-- <i class="ti-plus me-1"></i> --}}
                                <span>Όχι τμήματα άλλων ακινήτων</span>
                            </a>
                            <button id="exportExcelBtn" class="btn btn-excel btn-icon">
                                <i class="excel-icon"></i>
                                <span>Εξαγωγή σε Excel</span>
                            </button>
                        </div>
                        {{#if (can 'edit:content')}}
                        <div class="d-flex my-3">
                            <a href="/properties/properties/new" class="btn btn-primary fw-semibold">
                                <i class="ti-plus me-1"></i>
                                Νέο Ακίνητο
                            </a>
                        </div>
                        {{/if}}
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="properties" class="dim-table table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th class="sortable d-none" data-sort-type="number">ID</th>
                                    <th class="wide-cell">Διεύθυνση</th>
                                    <th >Δημοτικό Διαμέρισμα</th>
                                    <th class="d-none">ΚΑΕΚ</th>
                                    <th class="d-none">Μέρος άλλου</th>
                                    <th class="sortable">Τύπος</th>
                                    <th>Συμβαλλόμενος</th>
                                    <th class="sortable" data-sort-type="date-gr">Λήξη Μίσθωσης</th>
                                    <th class="sortable">Κατάσταση</th>
                                    <th>Λεπτομέρειες</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each properties}}
                                <tr>
                                    <td class="d-none">{{this.id}}</td>
                                    <td class="fw-semibold">
                                        <a href="/properties/properties/{{this.id}}" class="text-primary text-decoration-none">
                                            {{join this.address this.appartment_number}}
                                        </a>
                                    </td>
                                    <td>
                                        {{this.department}}
                                    </td>
                                    <td class="d-none">
                                        {{this.kaek}}
                                    </td>
                                    <td class="d-none">
                                        {{check this.is_part_of_other 'Ναι' 'Όχι'}}
                                    </td>
                                    <td>
                                        {{#if (eq this.asset_type 'leased_out')}}
                                            <span class="badge bg-purple fs-6">{{assetTypeText 'leased_out'}}</span>
                                        {{else if (eq this.asset_type 'rented')}}
                                            <span class="badge bg-pink fs-6">{{assetTypeText 'rented'}}</span>
                                        {{else if (eq this.asset_type 'owned')}}
                                            <span class="badge bg-dark fs-6">{{assetTypeText 'owned'}}</span>
                                        {{else if (eq this.asset_type 'granted')}}
                                            <span class="badge bg-info fs-6">{{assetTypeText 'granted'}}</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.party}}
                                            <div>
                                                <a href="/properties/parties/{{this.party.id}}" class="text-primary text-decoration-none">{{this.party.name}}</a>
                                                {{#if this.lease.lease_direction}}
                                                    <br><small class="text-muted">
                                                        {{#if (eq this.lease.lease_direction 'incoming')}}
                                                            (Μισθωτής)
                                                        {{else if (eq this.lease.lease_direction 'outgoing')}}
                                                            (Εκμισθωτής)
                                                        {{/if}}
                                                    </small>
                                                {{/if}}
                                            </div>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td data-value="{{this.lease.lease_end}}">
                                        {{date this.lease.lease_end}}
                                    </td>
                                    <td>
                                        {{#if this.active}}
                                            <span class="badge bg-success fs-6 status-badge" data-lease-end="{{this.lease.lease_end}}">Ενεργό</span>
                                        {{else}}
                                            <span class="badge bg-secondary fs-6">Ανενεργό</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <a href="/properties/properties/{{this.id}}" class="btn btn-outline-primary" title="Προβολή/Επεξεργασία">
                                            <i class="ti-eye text-primary" ></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="module">
    // Έλεγχος λήξης μισθώσεων ακινήτων
    checkLeaseExpiry();

    Q('#exportExcelBtn') && Q('#exportExcelBtn').on('click', function() {
        downloadTableAsExcel('properties', 'Ακίνητα.xlsx', 'Ακίνητα');
    });
</script>