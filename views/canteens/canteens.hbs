<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-shopping-cart-full me-2"></i>
                        Σχολικά Κυλικεία
                    </h1>
                    <div class="card-actions">
                        {{#if (can 'edit:content')}}
                        <a href="/canteens/canteens/new" class="btn btn-primary">
                            <i class="ti-plus me-1"></i>
                            Νέο Κυλικείο
                        </a>
                        {{/if}}
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Όνομα Κυλικείου</th>
                                    <th>Επιφάνεια (τ.μ.)</th>
                                    <th>Διευθυντής</th>
                                    {{!-- <th>Έναρξη Μίσθωσης</th> --}}
                                    <th>Λήξη Μίσθωσης</th>
                                    <th>Κατάσταση</th>
                                    <th>Λεπτομέρειες</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each canteens}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>
                                        <a href="/canteens/canteens/{{this.id}}" class="text-primary text-decoration-none">{{this.name}}</a>
                                    </td>
                                    <td>{{this.area}}</td>
                                    <td>
                                        {{#if this.principal}}
                                            <a href="/canteens/principals/{{this.principal.id}}" class="text-primary text-decoration-none">{{this.principal.name}}</a>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    {{!-- <td>{{date this.lease_start}}</td> --}}
                                    <td>{{date this.lease_end}}</td>
                                    <td>
                                        {{#if this.active}}
                                            <span class="badge bg-success fs-6 status-badge" data-lease-end="{{this.lease_end}}">Ενεργό</span>
                                        {{else}}
                                            <span class="badge bg-secondary fs-6">Ανενεργό</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <a href="/canteens/canteens/{{this.id}}" class="btn btn-outline-primary" title="Προβολή/Επεξεργασία">
                                            <i class="ti-eye text-primary" style="font-size: 1.2rem;"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Ελέγχει όλα τα ενεργά κυλικεία για ληγμένες μισθώσεις
    const statusBadges = document.querySelectorAll('.status-badge');
    const today = new Date().toISOString().split('T')[0]; // YYYY-MM-DD format
    
    statusBadges.forEach(badge => {
        const leaseEndStr = badge.getAttribute('data-lease-end');
        
        if (leaseEndStr && leaseEndStr < today) {
            badge.textContent = 'Ληγμένο';
            badge.classList.remove('bg-success');
            badge.classList.add('bg-danger', 'text-light');
        }
    });
});
</script>