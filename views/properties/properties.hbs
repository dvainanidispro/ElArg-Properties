<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-home me-2"></i>
                        Ακίνητα
                    </h1>
                    <div class="card-actions">
                        {{#if (can 'edit:content')}}
                        <a href="/properties/properties/new" class="btn btn-primary">
                            <i class="ti-plus me-1"></i>
                            Νέο Ακίνητο
                        </a>
                        {{/if}}
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="dim-table table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th class="sortable" data-sort-type="number">ID</th>
                                    <th>ΚΑΕΚ</th>
                                    <th>Διεύθυνση</th>
                                    <th class="sortable">Τύπος</th>
                                    <th>Συμβαλλόμενος</th>
                                    <th class="sortable" data-sort-type="date-gr">Λήξη Μίσθωσης</th>
                                    <th class="sortable">Κατάσταση</th>
                                    <th>Λεπτομέρειες</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each properties}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>
                                        {{#if this.kaek}}
                                            <a href="/properties/properties/{{this.id}}" class="text-primary text-decoration-none">{{this.kaek}}</a>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.address}}
                                            <a href="/properties/properties/{{this.id}}" class="text-primary text-decoration-none">{{this.address}}</a>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if (eq this.asset_type 'leased_out')}}
                                            <span class="badge bg-purple fs-6">Εκμισθωμένο</span>
                                        {{else if (eq this.asset_type 'rented')}}
                                            <span class="badge bg-pink fs-6">Μισθωμένο</span>
                                        {{else}}
                                            <span class="badge bg-dark fs-6">Ιδιόκτητο</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.party}}
                                            <div>
                                                <a href="/properties/parties/{{this.party.id}}" class="text-primary text-decoration-none">{{this.party.name}}</a>
                                                {{#if this.lease_direction}}
                                                    <br><small class="text-muted">
                                                        {{#if (eq this.lease_direction 'incoming')}}
                                                            (Μισθωτής)
                                                        {{else if (eq this.lease_direction 'outgoing')}}
                                                            (Εκμισθωτής)
                                                        {{/if}}
                                                    </small>
                                                {{/if}}
                                            </div>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.lease_end}}
                                            {{date this.lease_end}}
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.active}}
                                            <span class="badge bg-success fs-6 status-badge" data-lease-end="{{this.lease_end}}">Ενεργό</span>
                                        {{else}}
                                            <span class="badge bg-secondary fs-6">Ανενεργό</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <a href="/properties/properties/{{this.id}}" class="btn btn-outline-primary" title="Προβολή/Επεξεργασία">
                                            <i class="ti-eye text-primary" style="font-size: 1.2rem;"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Ελέγχει όλα τα ενεργά ακίνητα για ληγμένες μισθώσεις και μισθώσεις που λήγουν σύντομα
    const statusBadges = document.querySelectorAll('.status-badge');
    const today = new Date();
    const todayStr = today.toISOString().split('T')[0]; // YYYY-MM-DD format
    
    // Υπολογισμός ημερομηνίας 6 μηνών από σήμερα
    const sixMonthsFromNow = new Date(today);
    sixMonthsFromNow.setMonth(today.getMonth() + 6);
    const sixMonthsFromNowStr = sixMonthsFromNow.toISOString().split('T')[0];
    
    statusBadges.forEach(badge => {
        const leaseEndStr = badge.getAttribute('data-lease-end');
        
        if (leaseEndStr) {
            if (leaseEndStr < todayStr) {
                // Ληγμένη μίσθωση
                badge.textContent = 'Ληγμένο';
                badge.classList.remove('bg-success');
                badge.classList.add('bg-danger', 'text-light');
            } else if (leaseEndStr <= sixMonthsFromNowStr) {
                // Μίσθωση που λήγει σύντομα (σε λιγότερο από 6 μήνες)
                badge.textContent = 'Λήγει σύντομα';
                badge.classList.remove('bg-success');
                badge.classList.add('bg-warning');
            }
        }
    });
});
</script>