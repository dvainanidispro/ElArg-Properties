<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-user me-2"></i>
                        Χρήστες
                    </h1>
                    <div class="card-actions">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
                            <i class="ti-plus me-1"></i>
                            Νέος Χρήστης
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Όνομα</th>
                                    <th>Email</th>
                                    <th>Ρόλος</th>
                                    <th>Κατάσταση</th>
                                    <th>Δημιουργία</th>
                                    <th>Επεξεργασία</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.email}}</td>
                                    <td>
                                        <span class="badge bg-{{deepLookup @root.roles this.role 'color'}} fs-6">
                                            {{this.role}}
                                        </span>
                                    </td>
                                    <td>
                                        {{#if this.active}}
                                            <span title="Ενεργός">✅</span>
                                        {{else}}
                                            <span title="Ανενεργός">❌</span>
                                        {{/if}}
                                    </td>
                                    <td>{{date this.createdAt}}</td>
                                    <td>
                                        <a href="/admin/users/{{this.id}}" class="btn btn-outline-success" title="Επεξεργασία">
                                            <i class="ti-pencil text-success" ></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal για προσθήκη νέου χρήστη -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModalLabel">Προσθήκη Νέου Χρήστη</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Κλείσιμο"></button>
            </div>
            <form id="addUserForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="addUserEmail" class="form-label">Email *</label>
                        <input type="email" class="form-control" id="addUserEmail" name="email" required>
                        <div class="form-text">Χρησιμοποιείται για να πραγματοποιήσει είσοδο ο Χρήστης.</div>
                    </div>
                    <div class="mb-3">
                        <label for="addUserName" class="form-label">Όνομα</label>
                        <input type="text" class="form-control" id="addUserName" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="addUserPassword" class="form-label">Κωδικός *</label>
                        <input type="password" class="form-control" id="addUserPassword" name="password" pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[^A-Za-z\d]).{8,}$" title="Το password πρέπει να περιέχει τουλάχιστον 8 χαρακτήρες, ένα γράμμα, έναν αριθμό και ένα σύμβολο." required>
                        <div class="form-text">Πληκτρολογήστε έναν προσωρινό κωδικό τον οποίο ο χρήστης θα πρέπει να αλλάξει μόνος του. Ο κωδικός θα πρέπει να περιέχει τουλάχιστον 8 χαρακτήρες, ένα γράμμα, έναν αριθμό και ένα σύμβολο.</div>
                    </div>
                    <div class="mb-3">
                        <label for="addUserRole" class="form-label">Ρόλος</label>
                        <select class="form-select" id="addUserRole" name="role">
                            {{#each roles}}
                                <option value="{{this.name}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <bootstrap-spinner class="d-none"></bootstrap-spinner>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ακύρωση</button>
                    <button type="submit" class="btn btn-primary">Δημιουργία</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Form για προσθήκη χρήστη
    document.getElementById('addUserForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        Q('bootstrap-spinner').show();
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        
        try {
            const response = await fetch('/admin/users', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            });
            
            const result = await response.json();
            Q('bootstrap-spinner').show(false);
            
            if (result.success) {
                alert('Ο χρήστης δημιουργήθηκε επιτυχώς!');
                location.reload();
            } else {
                alert('Σφάλμα: ' + result.message);
            }
        } catch (error) {
            Q('bootstrap-spinner').show(false);
            alert('Σφάλμα δικτύου: ' + error.message);
        }
    });
    
});
</script>
