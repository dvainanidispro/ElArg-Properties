<div class="container-fluid"></div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-files me-2"></i>
                        {{#if canteen}}
                            Μισθώσεις Κυλικείου: {{canteen.name}} 
                        {{else if party}}
                            Μισθώσεις Κυλικείων Συμβαλλομένου: {{party.name}}
                        {{else}}
                            Μισθώσεις Κυλικείων
                        {{/if}}
                    </h1>
                    <div class="card-actions">
                        {{#if (can 'edit:content')}}
                        <a href="/canteens/leases/new" class="btn btn-primary">
                            <i class="ti-plus me-1"></i>
                            Νέα Μίσθωση
                        </a>
                        {{/if}}
                    </div>
                </div>
                <div class="card-body">
                    {{#if canteen}}
                    <!-- Breadcrumb για canteen-specific leases -->
                    <nav aria-label="breadcrumb" class="mb-3">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/canteens/canteens">Κυλικεία</a></li>
                            <li class="breadcrumb-item"><a href="/canteens/canteens/{{canteen.id}}">{{canteen.name}}</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Μισθώσεις</li>
                        </ol>
                    </nav>
                    {{else if party}}
                    <!-- Breadcrumb για party-specific leases -->
                    <nav aria-label="breadcrumb" class="mb-3">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/properties/parties">Συμβαλλόμενοι</a></li>
                            <li class="breadcrumb-item"><a href="/properties/parties/{{party.id}}">{{party.name}}</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Μισθώσεις Κυλικείων</li>
                        </ol>
                    </nav>
                    {{/if}}
                    
                    <div class="table-responsive">
                        <table class="dim-table table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th class="sortable" data-sort-type="number">ID</th>
                                    {{#unless canteen}}
                                    <th>Κυλικείο</th>
                                    <th>Διευθυντής</th>
                                    {{/unless}}
                                    {{#unless party}}
                                    <th>Συμβαλλόμενος</th>
                                    {{/unless}}
                                    <th>Κατεύθυνση</th>
                                    <th class="sortable" data-sort-type="date-gr">Λήξη</th>
                                    <th class="sortable" data-sort-type="number">Μίσθωμα (€)</th>
                                    <th class="sortable">Κατάσταση</th>
                                    <th>Λεπτομέρειες</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each leases}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    {{#unless ../canteen}}
                                    <td>
                                        {{#if this.canteen}}
                                            <a href="/canteens/canteens/{{this.canteen.id}}" class="text-primary text-decoration-none">
                                                {{this.canteen.name}}
                                            </a>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.canteen.principal}}
                                            <a href="/canteens/principals/{{this.canteen.principal.id}}" class="text-primary text-decoration-none">
                                                {{this.canteen.principal.name}}
                                            </a>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    {{/unless}}
                                    {{#unless ../party}}
                                    <td>
                                        {{#if this.party}}
                                            <a href="/properties/parties/{{this.party.id}}" class="text-primary text-decoration-none">{{this.party.name}}</a>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    {{/unless}}
                                    <td>
                                        {{leaseDirectionText this.lease_direction}}
                                    </td>
                                    <td>{{date this.lease_end}}</td>
                                    <td>
                                        {{euro this.monthly_rent}}
                                    </td>
                                    <td>
                                        {{#if this.active}}
                                            <span class="badge bg-success fs-6 status-badge" data-lease-end="{{this.lease_end}}">Ενεργό</span>
                                        {{else}}
                                            <span class="badge bg-secondary fs-6">Ανενεργό</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <a href="/canteens/leases/{{this.id}}" class="btn btn-outline-primary" title="Προβολή/Επεξεργασία">
                                            <i class="ti-eye text-primary" style="font-size: 1.2rem;"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Ελέγχει όλα τα ενεργά leases για ληγμένες μισθώσεις και μισθώσεις που λήγουν σύντομα
    const statusBadges = document.querySelectorAll('.status-badge');
    const today = new Date();
    const todayStr = today.toISOString().split('T')[0]; // YYYY-MM-DD format
    
    // Υπολογισμός ημερομηνίας 6 μηνών από σήμερα
    const sixMonthsFromNow = new Date(today);
    sixMonthsFromNow.setMonth(today.getMonth() + 6);
    const sixMonthsFromNowStr = sixMonthsFromNow.toISOString().split('T')[0];
    
    statusBadges.forEach(badge => {
        const leaseEndStr = badge.getAttribute('data-lease-end');
        
        if (leaseEndStr) {
            if (leaseEndStr < todayStr) {
                // Ληγμένη μίσθωση
                badge.textContent = 'Ληγμένο';
                badge.classList.remove('bg-success');
                badge.classList.add('bg-danger', 'text-light');
            } else if (leaseEndStr <= sixMonthsFromNowStr) {
                // Μίσθωση που λήγει σύντομα (σε λιγότερο από 6 μήνες)
                badge.textContent = 'Λήγει σύντομα';
                badge.classList.remove('bg-success');
                badge.classList.add('bg-warning');
            }
        }
    });
});
</script>
