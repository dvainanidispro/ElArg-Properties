<div class="container-fluid">
    <div class="row">
        <!-- Breadcrumb -->
        <div class="col-12 mb-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/canteens/periods">Περίοδοι</a></li>
                    <li class="breadcrumb-item"><a href="/canteens/periods/{{period.id}}/submissions">Υποβολές {{period.code}}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Υποβολή Στοιχείων Κυλικείου - {{canteen.name}}
                    </li>
                </ol>
            </nav>
        </div>
        
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="ti-clipboard me-2"></i>
                        Υποβολή Στοιχείων Κυλικείου - {{canteen.name}} [{{period.code}}]
                    </h4>
                    <div class="card-actions">
                        <a href="/canteens/periods/{{period.id}}/submissions" class="btn btn-secondary btn-icon">
                            <i class="ti-arrow-left me-1"></i>
                            <span>Επιστροφή</span>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {{!-- Πληροφορίες περιόδου και κυλικείου --}}
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="ti-info-alt me-2"></i>
                                        Πληροφορίες Κυλικείου
                                    </h6>
                                    <strong>Όνομα:</strong> {{canteen.name}}<br>
                                    {{#if canteen.principal}}
                                        <strong>Διευθυντής:</strong> {{canteen.principal.name}}<br>
                                    {{/if}}
                                    {{#if canteen.party}}
                                        <strong>Μισθωτής:</strong> {{canteen.party.name}}<br>
                                    {{/if}}
                                    {{#if canteen.area}}
                                        <strong>Επιφάνεια:</strong> {{canteen.area}} τ.μ.<br>
                                    {{/if}}
                                    {{#if canteen.lease}}
                                        <strong>Λήξη Μίσθωσης:</strong> {{date canteen.lease.lease_end}}<br>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="ti-calendar me-2"></i>
                                        Πληροφορίες Περιόδου
                                    </h6>
                                    <strong>Περίοδος:</strong> {{period.code}}<br>
                                    <strong>Από:</strong> {{date period.start_date}}<br>
                                    <strong>Έως:</strong> {{date period.end_date}}<br>
                                    <strong>Προθεσμία:</strong> {{date period.submission_deadline}}<br>
                                    <strong>Κατάσταση:</strong> 
                                    {{#if period.active}}
                                        <span class="badge bg-success">Ενεργή</span>
                                    {{else}}
                                        <span class="badge bg-secondary">Ανενεργή</span>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>


                    {{!-- Φόρμα υποβολής στοιχείων --}}
                    <form id="submissionForm">
                        {{!-- Principal ID (Hidden) --}}
                        <input type="hidden" name="principal_id" value="{{canteen.principal.id}}">

                        {{#each subperiods}}
                        <div class="card mb-4 subperiod-card" data-index="{{@index}}">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="ti-calendar me-2"></i>
                                    <span class="larger">{{check (eq ../subperiods.length 1) 'Περίοδος' 'Υποπερίοδος'}}: {{date this.start_date}} - {{date this.end_date}}</span>
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    {{!-- Rent για αυτή την υπο-περίοδο --}}
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            Οικονομική Προσφορά Μισθωτή (€) *
                                        </label>
                                        <input type="number" 
                                               class="form-control" 
                                               name="subperiods[{{@index}}][rent]"
                                               value="{{#if ../submission.data}}{{deepLookup ../submission.data @index 'rent'}}{{else}}{{this.rent}}{{/if}}" 
                                               step="0.01" 
                                               min="0"
                                               required>
                                        <div class="form-text text-muted">Μίσθωμα για αυτή την υπο-περίοδο</div>
                                    </div>

                                    {{!-- Students --}}
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            Αριθμός Μαθητών *
                                        </label>
                                        <input type="number" 
                                               class="form-control" 
                                               name="subperiods[{{@index}}][students]" 
                                               value="{{deepLookup ../submission.data @index 'students'}}" 
                                               min="0" 
                                               step="1" 
                                               required>
                                        <div class="form-text text-muted">Αριθμός μαθητών για αυτή την περίοδο</div>
                                    </div>

                                    {{!-- Working Days --}}
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            Εργάσιμες Ημέρες *
                                        </label>
                                        <input type="number" 
                                               class="form-control" 
                                               name="subperiods[{{@index}}][working_days]" 
                                               value="{{deepLookup ../submission.data @index 'working_days'}}" 
                                               min="0" 
                                               step="1" 
                                               required>
                                        <div class="form-text text-muted">Εργάσιμες ημέρες για αυτή την περίοδο</div>
                                    </div>

                                    {{!-- Electricity Cost --}}
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            Κόστος Ρεύματος (€) *
                                        </label>
                                        <input type="number" 
                                               class="form-control" 
                                               name="subperiods[{{@index}}][electricity_cost]" 
                                               value="{{deepLookup ../submission.data @index 'electricity_cost'}}" 
                                               min="0" 
                                               step="0.01" 
                                               required>
                                        <div class="form-text text-muted">Κόστος ρεύματος για αυτή την περίοδο</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        
                        {{!-- Υπολογισμός συνόλου --}}
                        {{#if submission}}
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="card-title">
                                                    <i class="ti-control-forward me-2"></i>
                                                    Καθαρό Μίσθωμα:
                                                </h6>
                                                <div id="calculatedRent" class="fs-5 fw-bold">{{euro submission.rent}}</div>
                                            </div>
                                            <div class="">
                                                <button type="button" id="caclulateRent" class="btn btn-outline-primary">Υπολογισμός</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/if}}
                        
                        {{!-- Κουμπιά ενεργειών --}}
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-success btn-icon {{#unless (can 'edit:content')}}d-none{{/unless}}">
                                        <i class="ti-check me-1"></i>
                                        <span>{{#if newSubmission}}Δημιουργία{{else}}Ενημέρωση{{/if}} Υποβολής</span>
                                    </button>
                                    <button type="button" class="btn btn-secondary btn-icon" onclick="history.back()">
                                        <i class="ti-arrow-left me-1"></i>
                                        <span>Ακύρωση</span>
                                    </button>
                                    <bootstrap-spinner class="d-none"></bootstrap-spinner>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {{!-- Sidebar με πληροφορίες --}}
        <div class="col-lg-4">
            {{#unless newSubmission}}
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title">
                        <i class="ti-info me-2"></i>
                        Πληροφορίες Υποβολής
                    </h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <strong>ID:</strong> {{submission.id}}<br>
                        <strong>Υποβλήθηκε από:</strong> {{check submission.submittedByPrincipal submission.submittedByPrincipal.name 'Προσωπικό Δήμου'}}<br>
                        <strong>Δημιουργήθηκε:</strong> {{date submission.createdAt}}<br>
                        {{#if submission.updatedAt}}
                        <strong>Τελευταία ενημέρωση:</strong> {{date submission.updatedAt}}<br>
                        {{/if}}
                        <strong>Συνολικό Ποσό Είσπραξης:</strong> {{submission.total}} €
                    </small>
                </div>
            </div>
            {{/unless}}

            {{!-- Οδηγίες συμπλήρωσης --}}

            <div class="card {{#unless newSubmission}}mt-3{{/unless}}">
                <div class="card-header">
                    <h6 class="card-title">
                        <i class="ti-help me-2"></i>
                        Οδηγίες Συμπλήρωσης
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6><i class="ti-money me-1"></i> Οικονομικά Στοιχεία</h6>
                        <p class="small text-muted">Συμπληρώστε την οικονομική προσφορά για κάθε υποπερίοδο.</p>
                    </div>
                    <div class="mb-3">
                        <h6><i class="ti-user me-1"></i> Στοιχεία Λειτουργίας</h6>
                        <p class="small text-muted">Αριθμός μαθητών και εργάσιμες ημέρες για κάθε υποπερίοδο.</p>
                    </div>
                    <div class="mb-3">
                        <h6><i class="ti-bolt me-1"></i> Κόστος Ρεύματος</h6>
                        <p class="small text-muted">Το κόστος ρεύματος για κάθε υποπερίοδο.</p>
                    </div>
                    <div class="mb-3">
                        <h6><i class="ti-info me-1"></i> Υποπερίοδοι</h6>
                        <p class="small text-muted">Κάθε περίοδος μπορεί να χωρίζεται σε υποπεριόδους με διαφορετικά μισθώματα.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
document.addEventListener('DOMContentLoaded', function() {
    // Υπολογισμός καθαρού μισθώματος
    document.getElementById('caclulateRent')?.addEventListener('click', function(e) {
        e.preventDefault(); // Αποτροπή submit της φόρμας
        
        let totalRent = 0;
        let hasErrors = false;
        
        // Συλλογή δεδομένων από όλες τις υποπεριόδους
        document.querySelectorAll('.subperiod-card').forEach((card, index) => {
            const rentInput = card.querySelector(`input[name="subperiods[${index}][rent]"]`);
            const studentsInput = card.querySelector(`input[name="subperiods[${index}][students]"]`);
            const workingDaysInput = card.querySelector(`input[name="subperiods[${index}][working_days]"]`);
            
            const rent = parseFloat(rentInput.value) || 0;
            const students = parseInt(studentsInput.value) || 0;
            const workingDays = parseInt(workingDaysInput.value) || 0;
            
            // Έλεγχος αν όλα τα πεδία είναι συμπληρωμένα
            if (!rent || !students || !workingDays) {
                hasErrors = true;
                // Προσθήκη red border στα κενά πεδία
                [rentInput, studentsInput, workingDaysInput].forEach(input => {
                    if (!input.value) {
                        input.classList.add('is-invalid');
                    } else {
                        input.classList.remove('is-invalid');
                    }
                });
            } else {
                // Αφαίρεση red borders αν τα πεδία είναι συμπληρωμένα
                [rentInput, studentsInput, workingDaysInput].forEach(input => {
                    input.classList.remove('is-invalid');
                });
                
                // Υπολογισμός για αυτή την υποπερίοδο: (1/189) * rent * students * working_days
                const subperiodRent = (1/189) * rent * students * workingDays;
                totalRent += subperiodRent;
            }
        });
        
        if (hasErrors) {
            showErrorModal('Παρακαλώ συμπληρώστε όλα τα πεδία (Οικονομική Προσφορά, Αριθμός Μαθητών, Εργάσιμες Ημέρες) για όλες τις υποπεριόδους.');
            return;
        }
        
        // Ενημέρωση του display με το υπολογιζόμενο ποσό
        const calculatedRentElement = document.getElementById('calculatedRent');
        if (calculatedRentElement) {
            calculatedRentElement.textContent = totalRent.toLocaleString('el-GR', {
                style: 'currency',
                currency: 'EUR',
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
            });
        }
    });

    // Form για υποβολή/επεξεργασία submission
    document.getElementById('submissionForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        Q('bootstrap-spinner').show();
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        
        // Συλλογή δεδομένων από subperiods
        const subperiodsData = [];
        document.querySelectorAll('.subperiod-card').forEach((card, index) => {
            const rent = card.querySelector(`input[name="subperiods[${index}][rent]"]`).value;
            const students = card.querySelector(`input[name="subperiods[${index}][students]"]`).value;
            const workingDays = card.querySelector(`input[name="subperiods[${index}][working_days]"]`).value;
            const electricityCost = card.querySelector(`input[name="subperiods[${index}][electricity_cost]"]`).value;
            
            if (!rent || !students || !workingDays || !electricityCost) {
                Q('bootstrap-spinner').show(false);
                showErrorModal(`Παρακαλώ συμπληρώστε όλα τα πεδία για την υποπερίοδο ${index + 1}.`);
                return false;
            }
            
            subperiodsData.push({
                start_date: {{{objectify subperiods}}}.map(s => s.start_date)[index],
                end_date: {{{objectify subperiods}}}.map(s => s.end_date)[index],
                rent: parseFloat(rent),
                students: parseInt(students),
                working_days: parseInt(workingDays),
                electricity_cost: parseFloat(electricityCost)
            });
        });
        
        if (subperiodsData.length === 0) {
            return; // Σφάλμα validation ήδη εμφανίστηκε
        }
        
        // Προσθήκη δεδομένων subperiods
        data.data = subperiodsData;
        
        // Καθαρισμός παλαιών πεδίων
        Object.keys(data).forEach(key => {
            if (key.startsWith('subperiods[')) {
                delete data[key];
            }
        });
        
        const isEdit = !{{#if newSubmission}}true{{else}}false{{/if}};
        
        try {
            let url, method;
            if (isEdit) {
                url = `/canteens/periods/{{period.id}}/submissions/{{submission.id}}`;
                method = 'PUT';
            } else {
                url = '/canteens/periods/submissions';
                method = 'POST';
                // Προσθήκη των IDs για νέα υποβολή
                data.period_id = {{period.id}};
                data.canteen_id = {{canteen.id}};
            }
            
            const response = await fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            });
            
            const result = await response.json();
            Q('bootstrap-spinner').show(false);
            await Q.delay(0.1);
            
            if (result.success) {
                const message = isEdit ? 'Η υποβολή ενημερώθηκε επιτυχώς!' : 'Η υποβολή δημιουργήθηκε επιτυχώς!';

                // Εμφάνιση success modal με callback για navigation
                showSuccessModal(message, 3000, () => {
                    if (result.redirectUrl) {
                        window.location.href = result.redirectUrl;
                    } else {
                        window.location.href = '/canteens/periods/{{period.id}}/submissions/{{submission.id}}';
                    }
                });
                
            } else {
                showErrorModal(result.message || 'Προέκυψε σφάλμα κατά την επεξεργασία της αίτησής σας.');
            }
        } catch (error) {
            Q('bootstrap-spinner').show(false);
            showErrorModal('Σφάλμα δικτύου: ' + error.message);
        }
    });
});
</script>
