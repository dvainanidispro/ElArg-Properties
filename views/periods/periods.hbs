<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-reload me-2"></i>
                        Περίοδοι Κυλικείων
                    </h1>
                </div>
                <div class="card-body">

                    {{#if showNextPeriodButton}}
                        <div class="mb-3">
                            <button 
                                type="button" 
                                class="btn btn-success"
                                x-data
                                @click="
                                    fetch('/canteens/periods/generate', { 
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' }
                                    })
                                    .then(() => new Promise(resolve => setTimeout(resolve, 500)))
                                    .then(() => window.location.reload())
                                    .catch(() => window.location.reload())
                                ">
                                <i class="ti-plus me-2"></i>
                                Δημιουργία επόμενης περιόδου
                            </button>
                        </div>
                    {{/if}}

                    <div class="table-responsive">
                        <table class="dim-table table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    {{!-- <th>ID</th> --}}
                                    <th class="narrow-cell-sm">Κωδικός</th>
                                    <th class="wide-cell-sm">Όνομα περιόδου</th>
                                    <th class="">Διάστημα</th>
                                    <th>Προθεσμία <br>υποβολών</th>
                                    <th class="">Κατάσταση <br>υποβολών</th>
                                    {{!-- <th class="narrow-cell-sm">Ενεργή</th> --}}
                                    <th class="narrow-cell-sm">Λεπτομέρειες</th>
                                    <th class="narrow-cell-sm">Υπενθυμίσεις</th>
                                    <th class="narrow-cell-sm">Υποβολές <br>στοιχείων</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each periods}}
                                <tr>
                                    {{!-- <td>{{this.id}}</td> --}}
                                    <td >
                                        <a href="/canteens/periods/{{this.id}}" class="text-primary text-decoration-none">
                                            {{this.code}}
                                        </a>
                                    </td>
                                    <td class="fw-semibold">
                                        <a href="/canteens/periods/{{this.id}}" class="text-primary text-decoration-none">
                                            {{this.name}}
                                        </a>
                                    </td>
                                    <td>
                                        {{date this.start_date}} - {{date this.end_date}}
                                    </td>
                                    <td>{{date this.submission_deadline}}</td>
                                    <td>
                                        {{#if (eq this.status 'planned')}}
                                            <span class="badge bg-info fs-6">Προγραμματισμένη</span>
                                        {{else if (eq this.status 'open')}}
                                            <span class="badge bg-success fs-6">Ανοιχτή</span>
                                        {{else if (eq this.status 'closed')}}
                                            <span class="badge bg-blue fs-6">Κλειστή</span>
                                        {{else if (eq this.status 'inactive')}}
                                            <span class="badge bg-gray fs-6">Ανενεργή</span>
                                        {{/if}}
                                    </td>
                                    {{!-- <td>
                                        {{#if this.active}}
                                            <span title="Ενεργή"><i class="bi bi-check-circle-fill text-success"></i></span>
                                        {{else}}
                                            <span title="Ανενεργή"><i class="bi bi-x-circle text-secondary"></i></span>
                                        {{/if}}
                                    </td> --}}
                                    <td>
                                        <a href="/canteens/periods/{{this.id}}" class="btn btn-outline-primary" title="Προβολή/Επεξεργασία">
                                            <i class="ti-eye text-primary" ></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/canteens/periods/{{this.id}}/logs" class="btn btn-outline-info" title="Reminders Logs">
                                            <i class="ti-receipt text-info" ></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/canteens/periods/{{this.id}}/submissions" class="btn btn-primary" title="Υποβολές Στοιχείων">
                                            <i class="ti-files text-light" ></i>
                                        </a>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="10" class="text-center text-muted py-4">
                                        <i class="ti-calendar fa-2x mb-2"></i><br>
                                        Δεν βρέθηκαν περίοδοι κυλικείων
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>