<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-archive me-2"></i>
                        Ιστορικό Μισθώσεων: {{canteen.name}}
                    </h1>
                    <div class="card-actions">
                        <button type="button" class="btn btn-secondary me-2" onclick="history.back()">
                            <i class="ti-arrow-left me-1"></i>
                            Επιστροφή
                        </button>
                        {{#if (can 'edit:content')}}
                        <a href="/canteens/leases/new?canteen_id={{canteen.id}}&redirect=/canteens/canteens/{{canteen.id}}/leases/history" class="btn btn-primary">
                            <i class="ti-plus me-1"></i>
                            Νέα Μίσθωση
                        </a>
                        {{/if}}
                    </div>
                </div>
                <div class="card-body">
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/canteens/canteens">Κυλικεία</a></li>
                            <li class="breadcrumb-item"><a href="/canteens/canteens/{{canteen.id}}">{{canteen.name}}</a></li>
                            <li class="breadcrumb-item"><a href="/canteens/canteens/{{canteen.id}}/leases">Μισθώσεις</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Ιστορικό</li>
                        </ol>
                    </nav>



                    <!-- Πληροφορίες Κυλικείου -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">Στοιχεία Κυλικείου</h5>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <strong>Όνομα:</strong> {{canteen.name}}
                                        </div>
                                        <div class="col-md-4">
                                            <strong>Επιφάνεια (τ.μ.):</strong> {{canteen.area}}
                                        </div>
                                        <div class="col-md-4">
                                            <strong>Διευθυντής:</strong> 
                                            {{#if canteen.principal}}
                                                <a href="/canteens/principals/{{canteen.principal.id}}" class="text-primary text-decoration-none">
                                                    {{canteen.principal.name}}
                                                </a>
                                            {{else}}
                                                <span class="text-muted">Δεν έχει οριστεί</span>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Πίνακας Ιστορικού -->
                    <div class="table-responsive">
                        <table class="dim-table table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th class="sortable" data-sort-type="number">ID</th>
                                    <th>Συμβαλλόμενος</th>
                                    <th class="sortable" data-sort-type="date-gr">Έναρξη</th>
                                    <th class="sortable" data-sort-type="date-gr">Λήξη</th>
                                    <th>Διάρκεια</th>
                                    <th class="sortable" data-sort-type="number">Μίσθωμα (€)</th>
                                    <th class="sortable">Κατάσταση</th>
                                    <th>Ενέργειες</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each leases}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>
                                        {{#if this.party}}
                                            <div>
                                                <a href="/properties/parties/{{this.party.id}}" class="text-primary text-decoration-none fw-bold">
                                                    {{this.party.name}}
                                                </a>
                                                {{#if this.party.afm}}
                                                    <br><small class="text-muted">ΑΦΜ: {{this.party.afm}}</small>
                                                {{/if}}
                                                {{#if this.party.email}}
                                                    <br><small class="text-muted">{{this.party.email}}</small>
                                                {{/if}}
                                            </div>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>{{date this.lease_start}}</td>
                                    <td>
                                        {{#if this.lease_end}}
                                            {{date this.lease_end}}
                                        {{else}}
                                            <span class="text-muted">Αορίστου</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.lease_end}}
                                            <span class="lease-duration" data-start="{{this.lease_start}}" data-end="{{this.lease_end}}">
                                                Υπολογισμός...
                                            </span>
                                        {{else}}
                                            <span class="lease-duration" data-start="{{this.lease_start}}" data-end="">
                                                Υπολογισμός...
                                            </span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.monthly_rent}}
                                            {{euro this.monthly_rent}}
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.active}}
                                            <span class="badge bg-success fs-6 status-badge" data-lease-end="{{this.lease_end}}">Ενεργό</span>
                                        {{else}}
                                            <span class="badge bg-secondary fs-6">Ανενεργό</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/canteens/leases/{{this.id}}" class="btn btn-sm btn-outline-primary" title="Προβολή/Επεξεργασία">
                                                <i class="ti-eye"></i>
                                            </a>
                                            {{#if (can 'edit:content')}}
                                            <button type="button" class="btn btn-sm btn-outline-info" onclick="printLease({{this.id}})" title="Εκτύπωση">
                                                <i class="ti-printer"></i>
                                            </button>
                                            {{/if}}
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    {{#unless leases}}
                    <div class="text-center py-5">
                        <i class="ti-archive text-muted" style="font-size: 4rem;"></i>
                        <h4 class="text-muted mt-3">Δεν υπάρχουν μισθώσεις</h4>
                        <p class="text-muted">Δεν έχουν καταχωρηθεί μισθώσεις για αυτό το κυλικείο.</p>
                        {{#if (can 'edit:content')}}
                        <a href="/canteens/leases/new?canteen_id={{canteen.id}}&redirect=/canteens/canteens/{{canteen.id}}/leases/history" class="btn btn-primary mt-2">
                            <i class="ti-plus me-1"></i>
                            Δημιουργία Πρώτης Μίσθωσης
                        </a>
                        {{/if}}
                    </div>
                    {{/unless}}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Ελέγχει όλα τα ενεργά leases για ληγμένες μισθώσεις και μισθώσεις που λήγουν σύντομα
    const statusBadges = document.querySelectorAll('.status-badge');
    const today = new Date();
    const todayStr = today.toISOString().split('T')[0]; // YYYY-MM-DD format
    
    // Υπολογισμός ημερομηνίας 6 μηνών από σήμερα
    const sixMonthsFromNow = new Date(today);
    sixMonthsFromNow.setMonth(today.getMonth() + 6);
    const sixMonthsFromNowStr = sixMonthsFromNow.toISOString().split('T')[0];
    
    statusBadges.forEach(badge => {
        const leaseEndStr = badge.getAttribute('data-lease-end');
        
        if (leaseEndStr) {
            if (leaseEndStr < todayStr) {
                // Ληγμένη μίσθωση
                badge.textContent = 'Ληγμένο';
                badge.classList.remove('bg-success');
                badge.classList.add('bg-danger', 'text-light');
            } else if (leaseEndStr <= sixMonthsFromNowStr) {
                // Μίσθωση που λήγει σύντομα (σε λιγότερο από 6 μήνες)
                badge.textContent = 'Λήγει σύντομα';
                badge.classList.remove('bg-success');
                badge.classList.add('bg-warning');
            }
        }
    });

    // Υπολογισμός διάρκειας μισθώσεων
    const leaseDurationElements = document.querySelectorAll('.lease-duration');
    leaseDurationElements.forEach(element => {
        const startDate = new Date(element.getAttribute('data-start'));
        const endDateStr = element.getAttribute('data-end');
        const endDate = endDateStr ? new Date(endDateStr) : new Date();
        
        const diffTime = Math.abs(endDate - startDate);
        const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
        const years = Math.floor(diffDays / 365);
        const months = Math.floor((diffDays % 365) / 30);
        const days = diffDays % 30;
        
        let durationText = '';
        if (years > 0) {
            durationText += years + ' έτη ';
        }
        if (months > 0) {
            durationText += months + ' μήνες ';
        }
        if (days > 0 && years === 0) {
            durationText += days + ' ημέρες';
        }
        
        element.textContent = durationText.trim() || '0 ημέρες';
    });
});

