<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-reload me-2"></i>
                        Περίοδοι Κυλικείων
                    </h1>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="dim-table table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    {{!-- <th>ID</th> --}}
                                    <th>Κωδικός</th>
                                    <th class="wide-cell-m">Όνομα περιόδου</th>
                                    <th class="wide-cell-m">Διάστημα</th>
                                    <th>Προθεσμία <br>υποβολών</th>
                                    <th class="wide-cell-m">Κατάσταση <br>υποβολών</th>
                                    <th>Ενεργή</th>
                                    <th>Λεπτομέρειες</th>
                                    <th>Υπενθυμίσεις</th>
                                    <th>Υποβολές <br>στοιχείων</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each periods}}
                                <tr>
                                    {{!-- <td>{{this.id}}</td> --}}
                                    <td >
                                        <a href="/canteens/periods/{{this.id}}" class="text-primary text-decoration-none">
                                            {{this.code}}
                                        </a>
                                    </td>
                                    <td class="fw-semibold">
                                        <a href="/canteens/periods/{{this.id}}" class="text-primary text-decoration-none">
                                            {{this.name}}
                                        </a>
                                    </td>
                                    <td>
                                        {{date this.start_date}} - {{date this.end_date}}
                                    </td>
                                    <td>{{date this.submission_deadline}}</td>
                                    <td>
                                        {{#if (eq this.status 'planned')}}
                                            <span class="badge bg-info fs-6">Προγραμματισμένη</span>
                                        {{else if (eq this.status 'open')}}
                                            <span class="badge bg-success fs-6">Ανοιχτή</span>
                                        {{else if (eq this.status 'closed')}}
                                            <span class="badge bg-warning fs-6">Κλειστή</span>
                                        {{else if (eq this.status 'inactive')}}
                                            <span class="badge bg-secondary fs-6">Ανενεργή</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.active}}
                                            <span title="Ενεργή">✅</span>
                                        {{else}}
                                            <span title="Ανενεργή">🚫</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <a href="/canteens/periods/{{this.id}}" class="btn btn-outline-primary" title="Προβολή/Επεξεργασία">
                                            <i class="ti-eye text-primary" ></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/canteens/periods/{{this.id}}/logs" class="btn btn-outline-info" title="Reminders Logs">
                                            <i class="ti-receipt text-info" ></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/canteens/periods/{{this.id}}/submissions" class="btn btn-primary" title="Υποβολές Στοιχείων">
                                            <i class="ti-files text-light" ></i>
                                        </a>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="10" class="text-center text-muted py-4">
                                        <i class="ti-calendar fa-2x mb-2"></i><br>
                                        Δεν βρέθηκαν περίοδοι κυλικείων
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>