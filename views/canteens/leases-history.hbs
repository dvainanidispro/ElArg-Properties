<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-archive me-2"></i>
                        Ιστορικό Μισθώσεων: {{canteen.name}}
                    </h1>
                    <div class="card-actions">
                        <button type="button" class="btn btn-secondary me-2" onclick="history.back()">
                            <i class="ti-arrow-left me-1"></i>
                            Πίσω
                        </button>
                        {{#if (can 'edit:content')}}
                        <a href="/canteens/leases/new?canteen_id={{canteen.id}}&redirect=/canteens/canteens/{{canteen.id}}/leases/history" class="btn btn-primary">
                            <i class="ti-plus me-1"></i>
                            Νέα Μίσθωση
                        </a>
                        {{/if}}
                    </div>
                </div>
                <div class="card-body">
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/canteens/canteens">Κυλικεία</a></li>
                            <li class="breadcrumb-item"><a href="/canteens/canteens/{{canteen.id}}">{{canteen.name}}</a></li>
                            <li class="breadcrumb-item"><a href="/canteens/canteens/{{canteen.id}}/leases">Μισθώσεις</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Ιστορικό</li>
                        </ol>
                    </nav>



                    <!-- Πληροφορίες Κυλικείου -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">Στοιχεία Κυλικείου</h5>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <strong>Όνομα:</strong> {{canteen.name}}
                                        </div>
                                        <div class="col-md-4">
                                            <strong>Επιφάνεια (τ.μ.):</strong> {{canteen.area}}
                                        </div>
                                        <div class="col-md-4">
                                            <strong>Τρέχων Διευθυντής:</strong> 
                                            {{#if canteen.principal}}
                                                <a href="/canteens/principals/{{canteen.principal.id}}" class="text-primary text-decoration-none">
                                                    {{canteen.principal.name}}
                                                </a>
                                            {{else}}
                                                <span class="text-muted">Δεν έχει οριστεί</span>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Πίνακας Ιστορικού -->
                    <div class="table-responsive">
                        <table class="dim-table table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    {{!-- <th class="sortable" data-sort-type="number">ID</th> --}}
                                    <th>Συμβαλλόμενος</th>
                                    <th class="sortable" data-sort-type="date-gr">Έναρξη</th>
                                    <th class="sortable" data-sort-type="date-gr">Λήξη</th>
                                    <th>Διάρκεια</th>
                                    <th class="sortable" data-sort-type="number">Μίσθωμα</th>
                                    <th class="sortable">Κατάσταση</th>
                                    <th>Ενέργειες</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each leases}}
                                <tr>
                                    {{!-- <td>{{this.id}}</td> --}}
                                    <td>
                                        {{#if this.party}}
                                            <div>
                                                <a href="/properties/parties/{{this.party.id}}" class="text-primary text-decoration-none fw-bold">
                                                    {{this.party.name}}
                                                </a>
                                                {{#if this.party.afm}}
                                                    <br><small class="text-muted">ΑΦΜ: {{this.party.afm}}</small>
                                                {{/if}}
                                                {{#if this.party.email}}
                                                    <br><small class="text-muted">{{this.party.email}}</small>
                                                {{/if}}
                                            </div>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>{{date this.lease_start}}</td>
                                    <td>
                                        {{#if this.lease_end}}
                                            {{date this.lease_end}}
                                        {{else}}
                                            <span class="text-muted">Αορίστου</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.lease_end}}
                                            <span class="lease-duration" data-start="{{this.lease_start}}" data-end="{{this.lease_end}}">
                                                Υπολογισμός...
                                            </span>
                                        {{else}}
                                            <span class="lease-duration" data-start="{{this.lease_start}}" data-end="">
                                                Υπολογισμός...
                                            </span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.rent}}
                                            {{euro this.rent}}
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.active}}
                                            <span class="badge bg-success fs-6 status-badge" data-lease-end="{{this.lease_end}}">Ενεργό</span>
                                        {{else}}
                                            <span class="badge bg-secondary fs-6">Ανενεργό</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <a href="/canteens/leases/{{this.id}}" class="btn btn-sm btn-outline-primary" title="Προβολή/Επεξεργασία">
                                            <i class="ti-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    {{#unless leases}}
                    <div class="text-center py-5">
                        <i class="ti-archive text-muted" style="font-size: 4rem;"></i>
                        <h4 class="text-muted mt-3">Δεν υπάρχουν μισθώσεις</h4>
                        <p class="text-muted">Δεν έχουν καταχωρηθεί μισθώσεις για αυτό το κυλικείο.</p>
                        {{#if (can 'edit:content')}}
                        <a href="/canteens/leases/new?canteen_id={{canteen.id}}&redirect=/canteens/canteens/{{canteen.id}}/leases/history" class="btn btn-primary mt-2">
                            <i class="ti-plus me-1"></i>
                            Δημιουργία Πρώτης Μίσθωσης
                        </a>
                        {{/if}}
                    </div>
                    {{/unless}}
                </div>
            </div>
        </div>
    </div>
</div>

<script>

window.dimtablesOptions = {
    pageInfoTemplate: ' ',
};

document.addEventListener('DOMContentLoaded', function() {
    // Έλεγχος για ληγμένες μισθώσεις και μισθώσεις που λήγουν σύντομα
    checkLeaseExpiry();

    // Υπολογισμός διάρκειας μισθώσεων
    calculateLeaseDuration();
});
</script>