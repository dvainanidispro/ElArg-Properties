<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-files me-2"></i>
                        <span>Υποβολές Στοιχείων Κυλικείου - Περίοδος {{period.code}}</span>
                        <span data-variable="period-description"></span>
                    </h1>
                    <div class="card-subtitle text-muted mt-2">
                        <i class="ti-calendar me-1"></i>
                        Περίοδος: {{date period.start_date}} - {{date period.end_date}}
                        <span class="mx-2">|</span>
                        <i class="ti-alarm-clock me-1"></i>
                        Προθεσμία: {{date period.submission_deadline}}
                    </div>
                </div>
                <div class="card-body">
                    {{#if canteens}}
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Στατιστικά Υποβολών για την περίοδο {{#if (can 'edit:content')}}test{{/if}}</h6>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="text-center">
                                                <h4 class="text-primary mb-0">{{canteens.length}}</h4>
                                                <small class="text-muted">Συνολικά Κυλικεία</small>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="text-center">
                                                <h4 class="text-success mb-0">{{submittedCount}}</h4>
                                                <small class="text-muted">Υποβλήθηκαν</small>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="text-center">
                                                <h4 class="text-warning mb-0">{{pendingCount}}</h4>
                                                <small class="text-muted">Εκκρεμούν</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                    
                    <div class="table-responsive">
                        <table class="dim-table table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th class="sortable" data-sort-type="number">ID</th>
                                    <th class="sortable">Όνομα Κυλικείου</th>
                                    <th>Διευθυντής</th>
                                    <th>Μισθωτής</th>
                                    {{!-- <th>Κατάσταση Κυλικείου</th> --}}
                                    <th>Λήξη Μίσθωσης</th>
                                    <th class="sortable">Υποβολή Στοιχείων</th>
                                    <th class="sortable">Ημερομηνία Υποβολής</th>
                                    <th class="sortable" data-sort-type="number">Μίσθωμα</th>
                                    <th>Ενέργειες</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each canteens}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>
                                        <a href="/canteens/canteens/{{this.id}}" class="text-primary text-decoration-none">
                                            <strong>{{this.name}}</strong>
                                        </a>
                                    </td>
                                    <td>
                                        {{#if this.principal}}
                                            <a href="/canteens/principals/{{this.principal.id}}" class="text-primary text-decoration-none">{{this.principal.name}}</a>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.party}}
                                            <a href="/properties/parties/{{this.party.id}}" class="text-primary text-decoration-none">{{this.party.name}}</a>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    {{!-- <td>
                                        {{#if this.active}}
                                            <span class="badge bg-success fs-6">Ενεργό</span>
                                        {{else}}
                                            <span class="badge bg-secondary fs-6">Ανενεργό</span>
                                        {{/if}}
                                    </td> --}}
                                    <td>
                                        {{#if this.lease.lease_end}}
                                            {{date this.lease.lease_end}}
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.hasSubmission}}
                                            <span class="badge bg-success fs-6">
                                                {{!-- <i class="ti-check me-1"></i> --}}
                                                <span>Υποβλήθηκε</span>
                                            </span>
                                        {{else}}
                                            <span class="badge bg-warning fs-6">
                                                {{!-- <i class="ti-alert me-1"></i> --}}
                                                <span>Εκκρεμεί</span>
                                            </span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if this.submission.updatedAt}}
                                            {{date this.submission.updatedAt}}
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td class="" data-sort-value="{{this.submission.rent}}">
                                        {{check this.submission.rent (euro this.submission.rent) '-'}}
                                    </td>
                                    <td>
                                        {{#if this.hasSubmission}}
                                            <a href="/canteens/periods/{{../period.id}}/submissions/{{this.submission.id}}" class="btn btn-outline-primary btn-sm me-1" title="Προβολή Υποβολής">
                                                <i class="ti-eye" ></i>
                                            </a>
                                        {{else}}
                                            <a href="/canteens/periods/submissions/new?period_id={{../period.id}}&canteen_id={{this.id}}" class="btn btn-primary btn-sm btn-icon {{#unless (can2 'edit:content' ../user)}}d-none{{/unless}}" title="Νέα Υποβολή">
                                                <i class="ti-plus me-1"></i>
                                                <span>Υποβολή</span>
                                            </a>
                                        {{/if}}
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="9" class="text-center text-muted py-4">
                                        <i class="ti-files fa-2x mb-2"></i><br>
                                        Δεν βρέθηκαν κυλικεία για αυτήν την περίοδο
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="module">
    Q('~period-description').set(`(${periodDescription('{{period.start_date}}' , '{{period.end_date}}')})`);
</script>

<style>
    /* Για τον viewer που του λείπουν κουμπιά στον πίνακα */
    tr{ height: 3.5rem }
</style>