<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title h3">
                        <i class="ti-cup me-2"></i>
                        Σχολικά Κυλικεία
                    </h1>
                    <div class="card-actions">
                        <a href="/canteens/canteens/new" class="btn btn-primary">
                            <i class="ti-plus me-1"></i>
                            Νέο Κυλικείο
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Όνομα Κυλικείου</th>
                                    <th>Επιφάνεια (τ.μ.)</th>
                                    <th>Διευθυντής</th>
                                    <th>Έναρξη Μίσθωσης</th>
                                    <th>Λήξη Μίσθωσης</th>
                                    <th>Κατάσταση</th>
                                    <th>Επεξεργασία</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each canteens}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.area}}</td>
                                    <td>
                                        {{#if this.principal}}
                                            <span class="text-primary">{{this.principal.name}}</span>
                                            <br><small class="text-muted">{{this.principal.email}}</small>
                                        {{else}}
                                            <span class="text-muted">-</span>
                                        {{/if}}
                                    </td>
                                    <td>{{date this.lease_start}}</td>
                                    <td>{{date this.lease_end}}</td>
                                    <td>
                                        {{#if this.active}}
                                            <span class="badge bg-success fs-6">Ενεργό</span>
                                        {{else}}
                                            <span class="badge bg-secondary fs-6">Ανενεργό</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <a href="/canteens/canteens/{{this.id}}" class="btn btn-outline-success" title="Επεξεργασία">
                                            <i class="ti-pencil text-success" style="font-size: 1.2rem;"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>